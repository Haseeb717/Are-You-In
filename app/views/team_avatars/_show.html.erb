<div class="display-team-avatar">
	<img alt="<%= team_avatar.avatar.instance.avatar_file_name %>" src="<%= team_avatar.avatar.url(:thumb) %>">
	<br/>
	<% if team_avatar.user == current_user %>
		<div class="btn btn-danger remove-team-avatar" id="<%= team_avatar.id %>"> Remove Team Avatar </div>
	<% end %>
</div>

<h4 class="semi-bold"> Edit Team <%= team_avatar.team.name.titleize if team_avatar.team %> </h4>