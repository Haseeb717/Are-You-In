<h1>Listing team_avatars</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @team_avatars.each do |team_avatar| %>
      <tr>
        <td><%= link_to 'Show', team_avatar %></td>
        <td><%= link_to 'Edit', edit_team_avatar_path(team_avatar) %></td>
        <td><%= link_to 'Destroy', team_avatar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

