<div class="page-sidebar" id="main-menu"> 
	<div class="page-sidebar-wrapper" id="main-menu-wrapper">
		<!-- BEGIN MINI-PROFILE -->
		<div class="user-info-wrapper"> 
			<div class="profile-wrapper">
				<% pic = current_user.player_avatars.empty? ? "/users/missing.png" : current_user.player_avatars.last.avatar(:original) %>
				<img src="<%= pic %>" alt="" data-src="<%= pic %>" data-src-retina="<%= pic %>" width="69" height="69" />
			</div>

			<div class="user-info">
				<div class="greeting">Welcome</div>
				<div class="username"><%= current_user.name %></div>
			</div>
		</div>
		<!-- END MINI-PROFILE -->
		<!-- BEGIN SIDEBAR MENU --> 
		
		<ul>
			<!-- BEGIN SELECTED LINK -->
			<li class="start active">
				<a href="#">
					<i class="fa fa-calendar"></i>
					<a href="<%= dashboard_path %>"> <span class="title">Events</span> </a>
					<span class="selected"></span>
				</a>
			</li>
			<!-- END SELECTED LINK -->

			<!-- BEGIN ONE LEVEL MENU -->
			<li class="">
				<a href="javascript:;">
					<i class="fa fa-group"></i>
					<span class="title">Teams</span>
					<span class="arrow"></span>
				</a>
				<ul class="sub-menu">
					<% @teams.each do |team| %>
						<li> <a href="<%= team_path(team) %>"> <%= team.name.titleize %> </a> </li>
					<% end %>
				</ul>
			</li>
			<!-- END ONE LEVEL MENU -->

			<!-- BEGIN TWO LEVEL MENU -->
			<li class="">
				<a href="javascript:;">
					<i class="fa fa-gear"></i>
					<span class="title">Account</span>
					<span class="arrow"></span>
				</a>
				<ul class="sub-menu">
					<li><a href="<%= user_path(current_user) %>"> View Profile </a></li>
					<li><a href="<%= settings_path	%>">Edit Profile</a></li>
				</ul>
			</li>
			<!-- END TWO LEVEL MENU --> 
			<li>
				<a href="#" data-toggle="modal" data-target="#add_team">
					<i class="fa fa-plus-circle"></i> Add Team
				</a>
			</li>
			<li>
				<a href="<%= destroy_user_session_path %>" data-method="delete">
					<i class="fa fa-power-off"></i>Logout
				</a>
			</li>
		</ul>

		<div class="clearfix"></div>
		<!-- END SIDEBAR WIDGETS -->
	</div>
</div>