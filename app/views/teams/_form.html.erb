<div class="modal fade" id="add_team<%=team.id%>" tabindex="-1" role="dialog" aria-labelledby="add_team" aria-hidden="true">
   <div class="modal-dialog">
      <div class="modal-content team-modal">
         <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
            <%= form_for(team_avatar, html: { multipart: true, class: "dropzone team-pic no-margin team-avatar"}) do |f|  %>
               <i class="fa fa-users fa-7x"></i>
               
               <div class="fallback">
                  <%= f.file_field :avatar %>
               </div>
            <% end %>
            <h4 id="" class="semi-bold">Add a New Team.</h4>
         </div>
         <div class="modal-body">
            <% form_id = team.new_record? ? "add-team-form" : "" %>
            <%= form_for(team, :html => { :id => form_id, :class => "add-team-form"}) do |f| %>
               <div class="form-wrap">
                  <div class="row form-row form-group">
                     <div class="col-md-12">
                        <input type="text" id="team_name" name="team_name" class="form-control" placeholder="Team Name" value="<%= team.name %>" />
                     </div>
                     <div class="col-md-12 m-b-10 select-container">
                        <select name="sport" id="sport" class="source form-control" style="width:100%">
                           <option value="">Please Select Sport</option>
                           <% SPORTS.each do |sport| %>
                              <% if team.sport and (sport.downcase == team.sport.downcase) %>
                                 <option value="<%= sport %>" selected="selected"><%= sport.capitalize %></option>
                              <% else %>
                                 <option value="<%= sport %>"><%= sport.capitalize %></option>
                              <% end %>
                           <% end %>
                        </select>
                     </div>
                     <div class="col-md-12">
                        <input type="text" name="city" id="city" class="form-control" placeholder="City" value="<%= team.city %>">
                     </div>
                  </div>
                  <div class="row form-row form-group">
                     <div class="col-md-12">
                        <div class="radio border-sep gender">
                           <input id="male" type="radio" name="gender" value="male" <%= checked = "checked" if team.gender == "male" %> >
                           <label for="male">Male</label>
                           <input id="female" type="radio" name="gender" value="female" <%= checked = "checked" if team.gender == "male" %> >
                           <label for="female">Female</label>                            
                           <input id="coed" type="radio" name="gender" value="coed" <%= checked = "checked" if team.gender == "male" %> >
                           <label for="coed">Coed</label>
                        </div>
                     </div>
                  </div>
                  <div class="row form-row">
                     <div class="col-md-12">
                        <div class="radio toggles age-group">
                           <input id="adult" type="radio" name="age" value="adult" <%= checked = "checked" if team.age == "adult" %> >
                           <label for="adult">Adult</label>
                           <input id="youth" type="radio" name="age" class="youth" value="youth" <%= checked = "checked" if team.age == "youth" %>>
                           <label for="youth">Youth</label>                            
                        </div>
                     </div>
                  </div>
                  <div class="row form-row collapse youth age-limit">
                     <div class="col-md-6 m-b-10">
                        <select name="age_from" id="age_from" class="source-nosearch" style="width:100%">
                           <option value="">Age From</option>
                           <% (8..100).step(5).each do |age_from| %>
                              <% if team.age_from == age_from %>
                                 <option value="<%= age_from %>" selected="selected"><%= age_from %></option>
                              <% else %>
                                 <option value="<%= age_from %>"><%= age_from %></option>
                              <% end %>
                           <% end %>
                        </select>
                     </div>
                     <div class="col-md-6 m-b-10">
                        <select name="age_to" id="age_to" class="source-nosearch" style="width:100%">
                           <option value="">Age To</option>
                           <% (12..104).step(5).each do |age_to| %>
                              <% if team.age_to == age_to %>
                                 <option value="<%= age_to %>" selected="selected"><%= age_to %></option>
                              <% else %>
                                 <option value="<%= age_to %>"><%= age_to %></option>
                              <% end %>
                           <% end %>
                        </select>
                     </div>
                     <div class="message help-block">
                        
                     </div>
                  </div>
                  <div class="modal-footer">
                     <div class="row form-row">
                        <div class="col-md-7">
                           <div class="checkbox text-left">
                              <input id="public_contact_info" type="checkbox" name="public_contact_info" value="<%= team.public_contact_info %>">
                              <label for="public_contact_info">Allow team to see each others contact info</label>
                           </div>
                        </div>
                        <div class="col-md-5">
                           <div class="checkbox">
                              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                              <button type="submit" class="btn btn-primary create">
                                 Create Team
                              </button>
                           </div>
                        </div>
                     </div>
                  </div>
               </div>
            <% end %>


            <div id="status">
               <%= render :partial => "teams/team_status", :locals => { :team => team } %>
            </div>
         </div>
         <!-- /.modal-content -->
      </div>
      <!-- /.modal-dialog -->
   </div>
   <!-- /.modal -->
</div>